{
  "name": "filethetic-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Filethetic - Generate synthetic data with verifiable LLMs on EVM blockchains using Filecoin & IPFS",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:filecoin": "hardhat run scripts/deploy.js --network filecoinCalibration",
    "verify": "hardhat verify"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "filecoin",
    "ipfs",
    "synthetic-data",
    "llm",
    "verifiable"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.25.0",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
